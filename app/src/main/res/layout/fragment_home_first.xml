<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlAccentColor="#fff"
    app:srlEnablePreviewInEditMode="false"
    app:srlEnableRefresh="false"
    app:srlPrimaryColor="@color/white">>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.car.common.viewpagerscroll.ConvenientBanner
                android:id="@+id/convenientBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_200"
                android:background="#eee"
                app:canLoop="true" />

            <EditText
                android:id="@+id/et_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_40"
                android:layout_below="@+id/convenientBanner"
                android:layout_marginLeft="@dimen/font_13"
                android:layout_marginRight="@dimen/font_13"
                android:layout_marginTop="@dimen/font_15"
                android:background="@drawable/bg_edit"
                android:drawableRight="@drawable/search"
                android:gravity="center_vertical"
                android:hint="发现奇趣 悦车生活"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/font_15"
                android:paddingRight="@dimen/font_15"
                android:singleLine="true"
                android:textColor="@color/bg_69a1ff"
                android:textColorHint="@color/bg_69a1ff"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/size_18" />

            <LinearLayout
                android:id="@+id/ll_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_edittext"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_15"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_15"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_15"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_15"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_type1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_20"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_20"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_20"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/font_10"
                    android:drawableTop="@drawable/setting_current"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/font_20"
                    android:text="汽车视频"
                    android:textSize="@dimen/size_15" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tital_zixun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_type2"
                android:layout_marginLeft="@dimen/font_14"
                android:layout_marginRight="@dimen/font_14"
                android:layout_marginTop="@dimen/font_20"
                android:text="汽车资讯"
                android:textColor="@color/bg_333333"
                android:textSize="@dimen/size_20" />

            <ImageView
                android:id="@+id/iv_zixun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_200"
                android:layout_below="@+id/tv_tital_zixun"
                android:layout_marginLeft="@dimen/font_13"
                android:layout_marginRight="@dimen/font_13"
                android:layout_marginTop="@dimen/font_20"
                android:scaleType="centerCrop"
                android:src="@drawable/ban_02" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_zixun"
                android:overScrollMode="never" />

        </RelativeLayout>


    </ScrollView>

    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlAccentColor="@color/black"
        app:srlClassicsSpinnerStyle="FixedBehind"
        app:srlPrimaryColor="@color/white" />

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
